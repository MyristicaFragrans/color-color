{
  "name": "color-color-app",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf public/*.{js,css,map}",
    "build:assets": "rollup -c",
    "watch:assets": "rollup -c -w",
    "dev": "run-s clean watch:*",
    "build": "run-s update clean build:*",
    "start": "sirv public --host",
    "release:sentry": "./release-on-sentry.sh",
    "release": "run-s build release:*",
    "test": "jest",
    "update": "browserslist --update-db",
    "prepare": "husky install"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com:saneef/color-color.git"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/runtime": "^7.14.0",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@sentry/cli": "^1.64.2",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "browserslist": "^4.16.6",
    "core-js": "^3.12.1",
    "cssnano": "^5.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.0.1",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.0",
    "prettier-plugin-svelte": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.38.2",
    "svelte-jest": "^0.3.1",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.1.2"
  },
  "dependencies": {
    "@borderless/base64": "^1.0.1",
    "@sentry/browser": "^6.3.6",
    "@xstate/fsm": "^1.6.0",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^2.1.1",
    "d3-scale": "^3.3.0",
    "d3-shape": "^2.1.0",
    "debounce": "^1.2.1",
    "hsluv": "^0.1.0",
    "pako": "^2.0.3",
    "sirv-cli": "^1.0.11"
  },
  "lint-staged": {
    "*.{js,svelte,css,md}": "prettier --write",
    "*.{js,svelte}": "eslint --cache --fix"
  }
